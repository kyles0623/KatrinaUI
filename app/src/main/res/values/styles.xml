<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KatrinaTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>

    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="MyActionBar"  parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#5fc5f0</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitle</item>

    </style>

    <style name="MyActionBarTitle" parent = "@style/MyActionBar">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- style the overflow menu -->
    <style name="MyPopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">#74CDF2</item>
    </style>

    <!-- Style the Text of the Module Icons -->
    <style name="ModTitleStyle">
        <item name="android:textColor">#858585</item>
    </style>

    <style name="DefaultButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/basic_button_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/basic_button_bg</item>
        <item name="android:paddingTop">3dp</item>
    </style>

</resources>